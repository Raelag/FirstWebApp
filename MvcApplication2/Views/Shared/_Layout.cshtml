<html>
    <title>@ViewBag.Title</title>
<style type="text/css">
    #main {
    }

    #header {
        background: url("logo3.png") no-repeat bottom right;
        width: 100%;
        float: top;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #logo {
        background: url("logo1.png") no-repeat;
        width: 400px;
        height: 200px;
        float: left;
    }

    #logo2 {
        background: #afeeee;
        margin-left: 400px;
        width: 1000px;
        height: 150px;
        float: top;
    }

    .m1 {
        position: relative;
    }

    ul {
        display: block;
        margin: 0;
        padding: 0;
        list-style: none;
        background: url("logo2.png") no-repeat bottom;
    }

        ul:after {
            display: block;
            content: ' ';
            clear: both;
            float: none;
        }

        ul.m1 > li {
            float: left;
            position: relative;
        }

            ul.m1 > li > a {
                display: block;
                width: 160px;
                height: 10px;
                padding: 20px;
                color: black;
                text-decoration: none;
            }

                ul.m1 > li > a:hover {
                    color: white;
                    background-color: black;
                }

        ul.sm1 {
            display: none;
            position: absolute;
            width: 200px;
            height: 50px;
            top: 50px;
            left: 0px;
            background-color: white;
        }

            ul.sm1 > li {
                display: block;
            }

                ul.sm1 > li > a {
                    display: block;
                    padding: 10px;
                    color: black;
                    background-color: orange;
                    text-decoration: none;
                }

                    ul.sm1 > li > a:hover {
                        color: white;
                        text-decoration: underline;
                        background: #222222;
                    }

        ul.m1 > li:hover > ul.sm1 {
            display: block;
        }
        ul.m1 > li:hover > ul.sm1 > li:hover {
            display: inherit;
        }

    #container {
        position: relative;
        margin-left: 400px;
        background: #555555;
        width: 1000px;
        height: 1000px;
    }

    #footer {
        background: #666666;
        margin: 10px auto;
    }

    #clear {
        clear: both;
    }
</style>
<body bgcolor="#123456">
